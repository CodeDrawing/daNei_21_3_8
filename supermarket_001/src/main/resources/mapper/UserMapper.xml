<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.zwzx.supermarket_001.mapper.UserMapper">

<select id="queryUser" parameterType="java.lang.String" resultType="top.zwzx.supermarket_001.pojo.User" >
    select * from smbms_user where 1=1
    <if test="queryName!=''">
        and userName=#{queryName}
    </if>
    <if test="userRole!=0">
        and userRole=#{userRole}
    </if>
</select>
    <insert id="addUser" parameterType="top.zwzx.supermarket_001.pojo.User">
        insert into smbms_user(userCode,userName,userPassword,gender,birthday,phone,address,userRole,createdBy,creationDate)
        value (#{userCode},#{userName},#{userPassword},#{gender},#{birthday},#{phone},#{address},#{userRole},#{createdBy},#{creationDate})
    </insert>
</mapper>